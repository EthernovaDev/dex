# Server
PORT=7400
HOST=127.0.0.1
NODE_ENV=production

# CORS
ALLOWED_ORIGIN=https://dex.ethnova.net
PUBLIC_BASE_URL=https://dex.ethnova.net

# Storage
SQLITE_PATH=/var/lib/novadex/metadata.db
UPLOAD_DIR=/var/lib/novadex/uploads

# Pinning provider (local Kubo)
PIN_PROVIDER=kubo
PINATA_JWT=
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_BASE=https://dex.ethnova.net/ipfs/

# Security
MAX_UPLOAD_MB=5
MAX_IMAGE_MB=1
DAILY_LIMIT_COUNT=10
DAILY_LIMIT_BYTES=10485760
IP_DAILY_LIMIT=200
IP_PUBLISH_LIMIT=50
IP_DAILY_BYTES=52428800
RATE_LIMIT_PER_MIN=60
NONCE_TTL_SECONDS=600

# RPC
RPC_URL=https://rpc.ethnova.net
TOKEN_FACTORY=
WNOVA=
START_BLOCK=
METADATA_REGISTRY=
REGISTRY_REGISTRAR_KEY=

# IPFS guardrail
IPFS_STORAGE_GUARD_RATIO=0.95
IPFS_STORAGE_GUARD_BYTES=204010946560
